    void setDescription( string description);
    string getDescription();
    void printDescription;
    
    void setPrice (double price);
    int getPrice();
    void printPrice;
    
    void setStockQuantity(int StockQuantity);
    int getStockQuantity();
    void printStockQuantity;
    
};
