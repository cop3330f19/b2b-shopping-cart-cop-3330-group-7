#include <iostream>
#include <string>

class Product 
{
private:
    int itemNo;
    string description;
    double price;
    int stockQuantity;
  
public:
    product(int itemNumber, stockQuantity, string description, double price);
    product();


    void setItemNumber(int itemNumber);
    int getitemNumber();
